@model Store.BLL.DTO.DeliveryDTO

@{
    ViewBag.Title = "Оформление заказа";
}

<h2>Оформление заказа</h2>

<p>Ввведи ваши контактные данные!</p>

@using (Html.BeginForm())
{
    @Html.ValidationSummary();
    <h3>Данные</h3>
    <div class="form-group">
        @Html.LabelFor(x => x.Name)
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>

    <h3>Адрес доставки</h3>
    <div class="form-group">
        @Html.LabelFor(x=>x.Country)
        @Html.TextBoxFor(x => x.Country, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.City)
        @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Street)
        @Html.TextBoxFor(x => x.Street, new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.House)
        @Html.TextBoxFor(x => x.House, new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Flat)
        @Html.TextBoxFor(x => x.Flat, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Phone)
        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
    </div>

    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Обработать заказ" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
