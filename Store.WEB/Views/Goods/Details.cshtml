        </dl>

    </div>
    <div class="goodDetailsRight">
        @Html.DisplayNameFor(model => model.Image)
        <br />
        @if (Model.Image != null)
        {
            <div class="pull-left getImage">
                <img class="img-thumbnail imageDetails"
                     src="@Url.Action("GetImage", "Goods", new {Model.Id})" />
            </div>
        }
