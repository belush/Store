            <dt>
                @Html.DisplayNameFor(model => model.Category.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Category.Name)
            </dd>
            <br />
            <dt>
            </dt>
            <dd>
                @Html.ActionLink("В корзину", "AddToCart", "Cart", new { goodId = Model.Id }, new { @class = "btn btn-primary" })
